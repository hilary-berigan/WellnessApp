.every-header
  %h5
    %strong{style: 'color: rgb(195,195,195); padding-left: 10%;'} RECORD ACTIVITIES
  %h2{style: 'padding-left: 10%; max-width: 26em; margin-bottom: 5%; color: rgb(93, 93, 93); '} Log the details of your activity.
  %br
.pop-container
  -if @activity.image_path.blank? == false
    =image_tag(@activity.image_path, height: '50', width: 'auto')
  =@activity.title

  = simple_form_for @user_activity, :method => :post, :url => activity_user_activities_path do |f|
    =f.date_select :completion_date
    =f.hidden_field :activity_id, :value => @activity.id

    =f.button :submit, :value => 'LOG ACTION'




