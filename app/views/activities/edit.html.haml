%h1 Edit Action
= simple_form_for @activity, :method => :patch, :url => activity_path(@activity.id) do |f|
  = f.input :title, :label => 'Title'
  = f.input :description, :as => :text, :label => 'Description'
  = f.file_field :image_path
  = f.input :point_value, :label => 'Point Value'
  = f.input :activity_status, :collection => [ 'A','I','D' ], :label => 'Status(Active,Inactive,Deleted)'
  = f.input :strong_type, :collection => ['Self', 'Train', 'Responsibility','Opportunities','Numbers','Goals'], :label => 'STRONG Category'
  = f.input :wellness_type, :collection => ['Nutrition', 'Fitness', 'Overall Health', 'WVA Event'], :label => 'Wellness Category'
  = f.input :icon_path, :collection => ['apple.png', 'Weightlifting.png', 'mind.png', 'heart.png']
  = f.button :submit