%h1 Edit Action
= simple_form_for @activity, :method => :patch, :url => activity_path(@activity.id) do |f|
  = f.input :title, :label => 'Title'
  = f.input :description, :as => :text, :label => 'Description'
  = f.input :image_path, :as => :file, :label => 'Upload Image'
  = f.input :point_value, :label => 'Point Value'
  = f.input :activity_status, :collection => [ 'A','I','D' ], :label => 'Status(Active,Inactive,Deleted)'
  = f.input :strong_type, :collection => ['Self', 'Train', 'Responsibility','Opportunity','Numbers','Goals'], :label => 'STRONG Category'
  = f.button :submit