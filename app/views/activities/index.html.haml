.every-header.row
  .col-sm-9
    %h5
      %strong{style: 'color: rgb(195,195,195); padding-left: 10%;'} RECORD ACTIVITIES
    %h2{style: 'padding-left: 10%; max-width: 26em; margin-bottom: 5%; color: rgb(93, 93, 93); '} Add an activity to your personal Activity Log by choosing from a list of healthy options.
  .col-sm-3.icons-list
    %span=image_tag("Self-Icon.png", height: '50', width:'50')
    %span=image_tag("Train-Icon.png", height: '50', width:'50')
    %span=image_tag("Responsibility-Icon.png", height: '50', width:'50')
    %span=image_tag("Opportunity-Icon.png", height: '50', width:'50')
    %span=image_tag("Numbers-Icon.png", height: '50', width:'50')
    %span=image_tag("Goals-Icon.png", height: '50', width:'50')

.list-container.container
  %ul.nav.nav-tabs.responsive{style:'max-width: 73em;' }
    %li.active.responsive
      = link_to 'All', activities_path
    %li.responsive
      = link_to 'Self', self_path
    %li.responsive
      = link_to 'Train', train_path
    %li.responsive
      = link_to 'Responsibility', responsibility_path
    %li.responsive
      = link_to 'Opportunities', opportunities_path
    %li.responsive
      = link_to 'Numbers', numbers_path
    %li.responsive
      = link_to 'Goals', goals_path
  %br
  %ul.activities-list
    =@activities.each do |a|
      %li.activities-list-item
        %span.points-icon
          %span.points
            =a.point_value
        .list-image

          -if a.image_path.blank? == false
            =image_tag(a.image_path.resized )
        .caption
          %h3
            =a.title

            =image_tag(a.icon_path, height: '32', width: '32')
          %p=a.description
          .row
            .col-sm-6
            .col-sm-6
              =link_to "LOG ACTION", [:new_activity_user_activity, activity_id: a.id, user_id: current_user.id] , :class=>"btn btn-default", :role=>"button"


